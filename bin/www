#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('Turkish_Chess:server');
var http = require('http');
var core = require('../core');
var fs = require('fs');
var path = require('path');
/**
 * Get port from environment and store in Express.
 */
var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);
/**
 * Create HTTP server.
 */
var server = http.createServer(app);
var io = require('socket.io').listen(server);
/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

var game = [];

// Return an available game (1 player), or create a new one
function getAvailableGame(){

    var available = [];

    for(var i = 0; i < game.length; i++){
        if(game[i].getPlayers().length <= 1){
            available = game[i];
        }
    }

    if(available.length == 0){
        game.push(new core.Board());
        available = game[game.length-1];
    }

    return available;
}

// Return the current game of client 'id'
function getGameClientID(id){
    var found = false;
    var i = 0;
    var board = [];

    while(!found && i < game.length){
        if(game[i].getPlayers()[0] == id || game[i].getPlayers()[1] == id){
            board = game[i];
        }
        i++;
    }

    return board;
}

// Connection
io.sockets.on('connection', function (socket) {

    // Sending the board to the new player
    socket.on('play', function(){
        var board = getAvailableGame();
        board.setPlayer(socket);
        console.log("Nouveau client veut jouer : " + socket.id);

        socket.emit("board", board.getBoardArray());
        socket.emit("waiting", true);

        if(board.getPlayers().length == 2) {
            board.getPlayers()[0].emit("waiting", false);
            board.getPlayers()[1].emit("waiting", false);
            board.getCurrentPlayer().emit("turn", true);
            console.log("Nouvelle partie entre "+board.getPlayers()[0].id+" et "+board.getPlayers()[1].id);
        }
    });

    // Client moves the pawn at 'pos'
    socket.on('move', function(pos){
        var board = getGameClientID(socket);

        board.swapPlayer();

        board.getCurrentPlayer().emit("turn", true);
        board.getPlayers()[1].emit("turn", false);
    });


    // Disconnection
    socket.on('disconnect', function(){
        //console.log('Client déconnecté');
    });
});

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
    var port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */


function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
